@model Kyckling.Web.Models.RestaurantModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<div class="col-md-4"><img src="@Model.ImageUrl" class="img-responsive" /></div>
<div class="col-md-4">
    <fieldset>
        <legend>Information</legend>
        <form class="form-horizontal" role="form">            
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.Description)</label>
                <p class="form-control-static">@Html.DisplayFor(model => model.Description)</p>
            </div>
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.DayCapacity)</label>
                <p class="form-control-static">@Html.DisplayFor(model => model.DayCapacity)</p>
            </div>
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.MaxPersonsBooking)</label>
                <p class="form-control-static">@Html.DisplayFor(model => model.MaxPersonsBooking)</p>
            </div>
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.MaxGuests)</label>
                <p class="form-control-static">@Html.DisplayFor(model => model.MaxGuests)</p>
            </div>

        </form>
    </fieldset>
</div>
<div class="col-md-4">
    <fieldset>
        <legend>Kontakt</legend>
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.StreetAddress)</label>
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.StreetAddress)<br />
                    @Html.DisplayFor(model => model.PostalCode) @Html.DisplayFor(model => model.City)
                </p>
            </div>
            <div class="form-group">
                <label class=" control-label">@Html.DisplayNameFor(model => model.Email)</label>
                <p class="form-control-static">@Html.DisplayFor(model => model.Email)</p>
            </div>
        </form>
        @Html.ActionLink("Boka bord", "SelectDate", "Reservation", new{id = Model.Id}, new { @class = "btn btn-default" })

    </fieldset>
</div>


